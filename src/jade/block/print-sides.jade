-printSide = {}

-printSide.oneOne	= []
-printSide.oneOne.id		= 'oneColorOneSide'
-printSide.oneOne.title	= '1 цвет 1 сторона'

-printSide.oneTwo	= []
-printSide.oneTwo.id		= 'oneColorTwoSides'
-printSide.oneTwo.title	= '1 цвет 2 стороны'

-printSide.twoOne	= []
