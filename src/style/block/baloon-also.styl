.baloon-also
	&__main-title
		@media (min-width md-min)
			font-size 24px
			font-weight normal
			margin-bottom 45px

	> div
		box-shadow 1px 0 0 0 ohra,
			0 1px 0 0 ohra,
			1px 1px 0 0 ohra,
			inset 1px 0 0 0 ohra,
			inset 0 1px 0 0 ohra

	&__item
		text-align center
		padding 15px 0
	
	&__title
		mix-catitem-title()
	
	&__face
		width 100%
		height 150px
		vertical-align middle
		overflow hidden
		
		&:before
			display inline-block
			height 100%
			content ''
			width 0
			vertical-align middle
		
	&__img
		max-height 100%
		max-width 100%
		vertical-align middle
		
	&__title
		font-size 17px
	
	&__counter
		mix-catitem-counter()
		
		margin 0 auto 20px
		width 80px
		overflow hidden
		border 1px solid gray-border
		border-radius 3px
		position relative
		text-align center
		display inline-block
		margin-right 10px
		
	&__minus
	&__plus
		position absolute
		width 25px
		display inline-block
		top 0
		bottom 0
		margin auto
		cursor pointer
		
		&:after
			content ''
			display inline-block
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			margin auto
		
	&__minus
		left 0px
	
	&__plus
		right 0px

	&__minus:after
		sprite($png_minus)
			
	&__plus:after
		sprite($png_plus)
				
	&__input
		text-align center
		width 30px
		border-left 1px solid gray-border
		border-right 1px solid gray-border
		border-top none
		border-bottom none
		outline none
		padding 3px
		font-size 16px
	
	&__footer
		@extend $clearfix
		
		mix-catitem-text()
		
		// margin 0 30px
		display inline-block
		min-width 150px
		
		@media (min-width lg-min)
			margin 0 15px
	
	&__price
		display inline-block
		padding 4px 5px 4px 0
		float left
	
	&__btn
		text-transform lowercase
		display inline-block
		border none
		background-color ohra
		padding 4px 11px
		float right