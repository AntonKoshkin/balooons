.navigation
	position relative
	padding 10px
	
	// желтый параллелипипед
	&__background
		background-color ohra
		transform skewX(-10deg)
		position absolute
		height 100%
		width 100%
		top 0
		right 0
		left 0
		margin auto
		z-index 0
		transition transform .2s linear .2s

	// коллапсирующая кнопка
	&__btn
		position absolute
		margin 3.5px
		right 25px
		top 10px
		display inline-block
		width 23px
		height 23px
		z-index 2
		cursor pointer
	
	&__strip
		position absolute
		display inline-block
		width 100%
		height 5px
		background-color white
		border-radius 1px
		left 0
		right 0
		margin auto
		
		&:first-child
			top 0
			transform rotate(0deg)
			transition top .2s linear .2s,
				transform .2s linear 0s
			
		&:nth-child(2)
			top 0
			bottom 0
			height 5px
			transition height .2s linear .3s
		
		&:last-child
			bottom 0
			transform rotate(0deg)
			transition bottom .2s linear .2s,
				transform .2s linear 0s
	// менюшка
	&__menu
		overflow hidden
		height 30px
		padding-left 10px
		
		transition height .2s linear 0s
	&__title
		display inline-block
		
	&__list
		position relative
		z-index 1

	// &__item
	&__a
		mix-menu-a()
		
		display block
		list-style-type none
		padding 5px
		
		&--active
			pointer-events none
		
	@media (max-width sm-max)
		&--open &__background
			transform skewX(0deg)
			transition transform .2s linear 0s
			
		&--open &__strip
			&:first-child
				top 9px
				transform rotate(45deg)
				transition transform .2s linear .2s,
					top .2s linear 0s
			
			&:last-child
				bottom 9px
				transform rotate(-45deg)
				transition transform .2s linear .2s,
					bottom .2s linear 0s
			
			&:nth-child(2)
				height 0
				transition height .2s linear 0s
		
		&--open &__menu
			height 200px
			transition height .2s linear .2s
	
	@media (min-width sm-min)
		margin-left 20px
		margin-right 20px
	
	@media (min-width md-min)
		
		&__background
			transform skewX(-30deg)
		
		&__btn
			display none
		
		&__menu
			height auto
			padding 0
		
		&__list
			text-align center

		&__item
			display inline-block
			
		&__a
			display inline-block
			padding 0px ((870 - 660)/12)px
			color black
	
	@media (min-width lg-min)
		&__a
			padding 0px ((1090 - 652)/12)px