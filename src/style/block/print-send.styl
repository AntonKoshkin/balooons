.print-send
	&__input
		mix-psend-input()
		
		border 1px solid gray-border
		border-radius 3px
		padding 6px
		width 100%
		margin-bottom 20px
		outline none
		box-shadow inset 0 1px 1px rgba(black, .1)
	
		&::-webkit-input-placeholder
			color black
			font-family cambria
			
		&:-moz-placeholder
			color black
			font-family cambria
			
		&::-moz-placeholder
			color black
			font-family cambria
			
		&:-ms-input-placeholder
			color black
			font-family cambria
	
	&__btn
		mix-psend-btn()
		
		background-color ohra
		border none
		border-radius 3px
		padding 5px 46px 9px
	
	@media (min-width sm-min)
		&__input
			width 45%
			margin-right 5%
			margin-bottom 30px
			padding 7px 10px
	
	@media (min-width lg-min)
		&__input
			width 32%