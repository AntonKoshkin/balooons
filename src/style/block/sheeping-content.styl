.sheeping
	&__title
		margin-bottom 30px
		
	&__option
		font-size 17px
		padding-left 60px
		position relative
		margin-bottom 30px
		
		&:last-child
			margin-bottom 50px
		
		&--fat
			font-weight bold
		
		&--upper
			text-transform uppercase
		
		&--incad
		&--present
		&--incall
			&:before
				display inline-block
				content ''
				position absolute
				left 0
				top 0
				bottom 0
				margin auto
		
		&--incad
			&:before
				sprite($png_car)
		
		&--present
			&:before
				sprite($png_present)
		
		&--incall
			&:before
				sprite($png_call)
	
	&__subtitle
		font-size 20px
		font-weight normal
		margin-bottom 30px
	
	&__list
		font-size 17px
		list-style-type none
	
	&__item
		@extend $clearfix
		
		position relative
		margin-bottom 10px
		
		&:before
			content ''
			display block
			width 100%
			height 0
			border-bottom: 1px dashed gray-border
			position absolute
			top 0
			bottom 0
			margin auto

	&__place
		float left
		background-color white
		position relative
		z-index 2
		padding-right 15px

	&__price
		float right
		text-transform uppercase
		background-color white
		position relative
		z-index 2
		padding-left 15px
	
	@media (min-width sm-min)
		margin 0 15px
		
		&__list
			columns 2
			column-gap 30px
	
	@media (min-width md-min)
		margin 0 20px 0 0
	
	@media (min-width lg-min)
		margin-right 200px