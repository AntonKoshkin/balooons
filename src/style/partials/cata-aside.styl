.side-menu
	padding 40px 0
	
	@media (min-width contWLg)
		margin-right 40px
	
	&__title
		color red
		font-weight bold
		font-size fz-main+6
		position relative
		display inline-block
		margin-bottom 20px
		
		&:after
			@extend $bifaf
			width 100%
			height 1px
			bottom -3px
			left -2px
			background @color
	&__list
		list-style-type none
		
	&__item
		font-size fz-main+3
		cursor pointer
	
	&__sublist
		list-style-type disc
		overflow hidden
		height 0
		transition .5s
		
		&--active
			height auto
			transition .5s
		
	&__subtitle
		display inline-block
		padding 14px 0 14px 5px
		border-bottom 1px dashed lighter-gray
		width 100%
	
	&__subitem
		margin-left 40px
	
	&__link
		display inline-block
		padding 14px 0
		
		&--active
			color blue
			text-decoration underline
