.banner
	color white
	background url(../img/cata-birthday-banner.jpg) no-repeat
	background-size cover
	text-align center
	margin-bottom 25px
	
	@media (min-width contWLg)
		padding 60px 100px
		
	@media (min-width contWMd) and (max-width (contWLg - 1))
		padding 25px 50px
	
	@media (max-width (contWMd - 1px))
		display none
	
	&__title
		font-family zopa
		font-size fz-main*3+3
		margin-bottom 20px
		
	&__text
		font-size fz-main+6
		margin-bottom 20px

.cat
	@media (min-width contWMd) and (max-width (contWLg - 1))
		dashed-border(bottom)

	&__title
		margin 45px 0 35px
		color red
		font-size fz-main+3
		font-weight bold
	
	&-item
		border 1px solid lightest-gray
		border-radius 1px
		text-align center
		margin-bottom 20px
		padding 10px
		
		&:after
			@extend $clearfix
		
		&__title
			text-align left
			font-size fz-main
		
		&__img
			min-height 180px
			overflow hidden
		
		&__price
			font-size fz-main+3
			font-style italic
			margin-bottom 10px
		
		&__number
			font-size fz-main+3
			width 30px
			padding 2px 2px
			text-align center
			float left
		
		&__unit
			font-size fz-main+3
			float left
			margin-left 5px
		
		&__to-basket
			background red
			color white
			border none
			padding 3px 10px 6px
			float right
			font-size fz-main