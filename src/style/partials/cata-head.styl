.upper-strip
	sprite($strip)
	
	&__wrapper
		padding 2px 0 5px
	
	&__text
		color white
		font-size fz-main+1

.logo
	position relative
	padding-left 85px
	
	&:before

		sprite($logo)

		@extend $bifaf
		@extend $left-center

	&__title
		font-family zopa
		font-size 58px
	
	&__slogan
		font-size fz-main+1

.header
	&__main
		padding 35px 0
		
	&__phones
		padding-top 15px
		text-align center
		display inline-block
		
	&__phone
		display inline-block
		font-size fz-head
		margin 0 50px
		
		&--gray
			color light-gray
			
		&:first-child
			padding 5px 0
			position relative

			&:before
				sprite($iconphone)
				
				@extend $bifaf
				@extend $left-center
				
				left -40px

.basket
	padding 15px 0 0
	font-size fz-head
	margin 0 50px 0 150px
	
	&__title
		position relative
		padding 5px 0
		
		&:before
			sprite($iconbasket)
			
			@extend $bifaf
			@extend $left-center
			
			left -40px
	
	&__link
		color blue
		text-decoration underline

.main-menu
	position relative
	font-size fz-main+1
	
	&__parallelogram
		z-index 0
		width 100%
		height 36px
		position absolute
		background yellow
		transform skew(-30deg)
	
	&__list
		width 100%
		
	&__item
		display inline-block
		text-align center
		
	&__a
		display inline-block
		padding 8px (550/12)px
		position relative
		z-index 1