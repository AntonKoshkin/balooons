// untouchable

.pull-left
	float left

.pull-right *
	float right

.text-left
	text-align left

.text-center
	text-align center

.text-right
	text-align right

body
	box-sizing border-box

.wrapper
	background #fff
	width 1200px
	margin 0 auto
	box-shadow 0 0 21px #000

*
	box-sizing inherit

p
	margin 0

a
	display inline-block
	text-decoration none
	color #000
	
ul
	padding 0
	margin 0
	
h1
h2
h3
	margin 0
	
