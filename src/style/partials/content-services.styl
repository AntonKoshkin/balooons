.service			
	background most-light-gray
	
	@media (min-width contWLg)
		padding 30px 50px 30px 30px
	
	@media (min-width contWMd) and (max-width (contWLg - 1))
		padding 30px
	
	@media (max-width (contWMd - 1px))
		padding 20px

	margin-bottom 35px
	
	&__img
		width 100%
		border-radius 50%
	
	&__title
		font-size fz-main+6
		font-family cambria
		margin-bottom 25px
	
	&__text
		font-size fz-main+1
		margin-bottom 20px
	
	&__button
		display inline-block
		background yellow
		padding 7px 40px
		color gray
		font-size fz-main+6
		margin-right 30px
		
		@media (max-width (contWMd - 1px))
			margin-bottom 10px
	
	&__price
		font-size fz-main+1
		
		@media (max-width (contWMd - 1px))
			display block