font(name, fat, curs)
	@font-face
		font-family name
		font-weight fat
		font-style curs
		
		for val in arguments
			if val == 'eot'
				src url('../fonts/'+name+'/'+fat+'/'+curs+'.eot')
				src url('../fonts/'+name+'/'+fat+'/'+curs+'.eot?#iefix') format('embedded-opentype')
			if val == 'woff'
				src url('../fonts/'+name+'/'+fat+'/'+curs+'.woff') format('woff')
			if val == 'woff2'
				src url('../fonts/'+name+'/'+fat+'/'+curs+'.woff2') format('woff2')
			if val == 'ttp'
				src url('../fonts/'+name+'/'+fat+'/'+curs+'.ttf') format('truetype')
		

