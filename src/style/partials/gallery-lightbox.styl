.gal-box
	display none

	&--on
		display block

	&__back
		background rgba(#000, .7)
		position fixed
		top 0
		width 100%
		height 100%

	&__pic
		vertical-align middle
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		margin auto
		text-align center
		background rgba(#000, .5)

		@media (min-width contWMd)
			max-width 80%
			max-height 80%

		@media (max-width (contWMd - 1px))
			max-width 100%
			max-height 100%

		&:before
		&:after
			width 0
			content ''
			display inline-block
			height 100%
			min-height inherit
			vertical-align middle

	&__img
		max-width 98%
		max-height 100%
		vertical-align middle

	&__close
		display inline-block
		position absolute
		top 0
		right 0
		width 50px
		height 50px
		background #000

		@media (min-width contWMd)
			opacity .3
			transition opacity .5s

			&:hover
				opacity 1
				transition opacity .5s

	&__strip
		display inline-block
		width 100%
		height 100%

		&:before
		&:after
			content ''
			top 0
			right 0
			bottom 0
			left 0
			margin auto
			display inline-block
			width 50px
			height 5px
			background #fff
			border-radius 2px
			position absolute

		&:before
			transform rotate(45deg)

		&:after
			transform rotate(-45deg)