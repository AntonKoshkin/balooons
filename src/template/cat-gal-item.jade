-galItems = [{src: 'img/gal-img-1.jpg', alt: 'галерейка'},{src: 'img/gal-img-2.jpg', alt: 'галерейка'},{src: 'img/gal-img-3.jpg', alt: 'галерейка'},{src: 'img/gal-img-4.jpg', alt: 'галерейка', disp: false}]

mixin gal-item
	each val in galItems
		if val.disp === false
			.col-lg-3.col-md-3.col-sm-0.text-center
				a.cat-gal__link(href="#")
					img.cat-gal__img(src=val.src, alt=val.alt)
		else
			.col-lg-3.col-md-3.col-sm-2.text-center
				a.cat-gal__link(href="#")
					img.cat-gal__img(src=val.src, alt=val.alt)